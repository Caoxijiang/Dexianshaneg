
<view class='subContainer'>
    <form bindsubmit='formSubmit'>
      <view class='box1'>
         <view class='item'>
          <text class='label'>收货人</text>
          <input name="userName" class='inout1'placeholder="填写收货人" placeholder-class='place' value="{{userName}}"></input>
        </view>
        <view class='item'>
          <text class='label'>手机号码</text>
          <input name="userPhone" class='inout1' placeholder="填写手机号码" placeholder-class='place' value="{{userPhone}}" type='number'></input>
        </view>
        <view class='item'>
          <text class='label'>详细地址</text>
          <input name="userAddress" class='recognition'placeholder="填写详细地址" placeholder-class='place' value="{{userAddress}}"></input>
        </view>        
      </view>
      <view class='box2'>
        <view class='item'>
          <text class='label'>设置默认地址</text>
          <switch bindchange="switch1Change"  class='right' checked="{{chec}}"/>
        </view>
      </view>
      
    <button formType="submit" type="primary" class='submit'>保存修改</button>
    <button  type="warn" class='submit' bindtap="delChange">删除</button>
    </form>
  
</view>
