}
.introduce{
  margin-top: 20rpx;
  margin-right: 30rpx;
  float: right;
  color: #aaa;
  font-size: 10px;
}
.wx-switch-input{
    width:82rpx !important;
    height:36rpx !important;
    background: #259c71 !important;
    border:1rpx solid #dedede !important; /* 2018-07-18 重置开关边框颜色 */
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:80rpx !important;
    height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 40rpx !important;
    height: 36rpx !important;
}