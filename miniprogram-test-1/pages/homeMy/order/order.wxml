<view class="cart-box">
    <!-- wx:for 渲染购物车列表 -->
    <view wx:for="{{carts}}">
        <view class='order'><text>订单编号：{{item.ordernum}}</text><text class='right'>{{item.data}}</text> </view>
        <!-- 显示商品 -->
        <view class='box'>
          <navigator url="../details/details?id={{item.id}}" class='navto'>
            <image class='bann' src="{{item.image}}"></image>
          </navigator>
          <!-- 上标注 -->
          <image src='./../../../../images/sucess.png' class="delimg" ></image>
          <view class='boxinform'>
            <text>{{item.title}} \n</text>
            <text class="intro">{{item.title}}{{item.title}}</text>
             <view>
              <text class=" price">￥{{item.price}}</text>
               <text class="right">X{{item.num}}</text>
             </view>
          </view>        
        </view>
        <view class="totalbox"><text>共{{item.total}}件商品 合计：￥{{item.totalmoney}}</text></view>
    </view>
</view>